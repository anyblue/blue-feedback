{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "@/*": ["src/*"],
            "src/*": ["src/*"],
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "**/**/*.ts",
      "**/**/*.d.ts"
, "index.d.ts"    ],
    "exclude": [
        "node_modules"
    ]
}
